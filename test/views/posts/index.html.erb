<%= navigate :content_menu, :posts do %>
  <%= link_to 'Posts' %>
<% end %>

<%= navigate :context, :action do %>
  <%= link_to 'test default tag' %>
<% end %>

<%= navigate :context, :action, :tag => :li do %>
  <%= link_to 'test :tag option' %>
<% end %>

<%= navigate :context, :action, :class => 'blue' do %>
  <%= link_to 'test :class option' %>
<% end %>

<% [true, false].each do |value| %>
  <%= navigate :context, :action, :if => value do %>
    <%= link_to "test :if option is #{value}" %>
  <% end %>

  <%= navigate :context, :action, :unless => value do %>
    <%= link_to "test :unless option is #{value}" %>
  <% end %>
<% end %>
